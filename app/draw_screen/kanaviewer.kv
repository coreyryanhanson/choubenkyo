<KanaViewer>
    charbox_pos: charbox.pos
    charbox_width: charbox.width
    charbox_height: charbox.height
    size_hint: (1, .85)
    BoxLayout:
        orientation: "vertical"
        pos: self.parent.pos
        size: self.parent.size
        Label:
            id: charbox
            text: root.character["character"]
            color: root.character_color
            font_name: 'app/assets/fonts/NotoSerifJP-Light.otf'
            text_size: self.parent.width, self.parent.height
            pos: self.parent.pos
            size: self.texture_size
            valign: 'middle'
            halign: 'center'
            font_size: .6 *  self.parent.height
        Label:
            size_hint: (1, .4)
            text: root.character["romanization"]
            font_name: 'app/assets/fonts/NotoSerifJP-Light.otf'
            text_size: self.parent.width, self.parent.height
            pos: self.parent.pos
            size: self.texture_size
            valign: 'middle'
            halign: 'center'
            font_size: .15 *  self.parent.height
        Label:
            size_hint: (1, .4)
            text:  root.character['stroke_count'] + " strokes"
            font_name: 'app/assets/fonts/NotoSerifJP-Light.otf'
            text_size: self.parent.width, self.parent.height
            pos: self.parent.pos
            size: self.texture_size
            valign: 'middle'
            halign: 'center'
            font_size: .07 *  self.parent.height
