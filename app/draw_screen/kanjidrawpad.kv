<KanjiDrawPad>
    x_canv_cent: self.size[0]/2
    y_canv_cent: self.size[1]/2
    canvas_denom: draw_area.norm_image_size[0]/2
    id: kanji_draw_pad
    AnchorLayout:
        pos: self.parent.pos
        size: self.parent.size
        Image:
            id: draw_area
            source: 'app/draw_screen/canvas.png'
            size: self.parent.size
            pos: self.parent.pos
            allow_stretch: True
        Widget:
            id: subcanvas
            size_hint: (None, None)
            canvas: root.drawing
            pos: self.parent.pos
            size: draw_area.norm_image_size
