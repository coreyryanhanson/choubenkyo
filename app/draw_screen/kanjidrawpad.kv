<KanjiDrawPad>
    x_canv_cent: self.size[0]/2
    y_canv_cent: self.size[1]/2
    canvas_denom: draw_area.norm_image_size[0]/2
    current_stroke: str(root.stroke_count)
    AnchorLayout:
        pos: self.parent.pos
        size: self.parent.size
        Image:
            id: draw_area
            source: 'app/draw_screen/canvas.png'
            size: self.parent.size
            pos: self.parent.pos
            allow_stretch: True
        Label:
            text: str(root.stroke_count)
            color: [1, 1, 1, .3]
        Widget:
            id: subcanvas
            size_hint: (None, None)
            pos: self.parent.pos
            size: draw_area.norm_image_size
            canvas:
                Color:
                    hsv: (1, 1, 1)
