<SaveDialog>
    size_hint: (.9, .9)
    BoxLayout:
        pos: self.parent.pos
        size: self.parent.size
        orientation: "vertical"
        FileChooserListView:
            id: filechooser
            path: root.dir_prefix
            pos: self.parent.pos
            size: self.parent.size
            on_selection: text_input.text = self.selection and self.selection[0] or ''
        TextInput:
            id: text_input
            size_hint_y: None
            height: self.parent.height/10
            multiline: False
        BoxLayout:
            size_hint_y: None
            height: self.parent.height/10
            Button:
                text: "Cancel"
                on_release: root.cancel()
            Button:
                text: "Save"
                on_release: root.save(filechooser.path, text_input.text)

<DirectorySetter>
    size_hint: (1, .2)
    BoxLayout:
        pos: self.parent.pos
        size: self.parent.size
        Label:
            text: "thisisatest"
            pos: self.parent.pos
            size: self.texture_size
            text_size: self.parent.width, self.parent.height
            valign: 'middle'
            halign: 'center'
        Button:
            on_release: root.prompt_save()
            Label:
                text: "Choose"
                pos: self.parent.pos
                size: self.texture_size
                text_size: self.parent.width, self.parent.height
                valign: 'middle'
                halign: 'center'
